<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxograma.Usuário"
             Title="Perfil">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

             <ImageButton Source="back.png"
                   Grid.Row= "0" 
                   Grid.Column="0"
                   Clicked= "Back"
                   HorizontalOptions= "Start"
                   WidthRequest="10"
                   HeightRequest="5" />

            <Label Text="PERFIL"
               HorizontalOptions="Center"
               Grid.ColumnSpan="2"
               Grid.Row="0" />

            <Image Source="user.png"
               Grid.ColumnSpan="2"
               Grid.Row="1" />

            <Label Text="Nome do usuário:"
                   FontAttributes="Bold"
                    Grid.Column="0"
               Grid.Row="2" />

            <Label x:Name="UserNameLabel"
                   Text="Nome" 
                    Grid.Column="1"
               Grid.Row="2" />

            <Label Text="Telefone:"
                   FontAttributes="Bold"
                    Grid.Column="0"
               Grid.Row="3" />

            <Label x:Name="UserPhoneLabel"
                   Text="55 ( ) XXXXXX-XXXX"
                   Grid.Row="3"
               Grid.Column="1" />

            <Label Text="Endereço:"
                   FontAttributes="Bold" 
                    Grid.Column="0"
               Grid.Row="4" />

            <Label x:Name="UserAddressLabel"
                   Text="Endereço" 
                    Grid.Column="1"
               Grid.Row="4"/>

            <Label Text="Email:"
                   FontAttributes="Bold"
                    Grid.Column="0"
               Grid.Row="5" />

            <Label x:Name="UserEmailLabel"
                   Text="Email"
                    Grid.Column="1"
               Grid.Row="5" />

           

                <Label Text="APAGAR"
                 Grid.Row="8"
                 Grid.Column="0"
                 HorizontalOptions="Center"/>

                   <ImageButton Source="delete.png"
                   Grid.Row= "9" 
                   Grid.Column="0"
                   Clicked="OnDeleteButtonClicked"
                   VerticalOptions= "Start"
                   WidthRequest="20"
                   HeightRequest="20" />

                <Label Text="EDITAR"
                Grid.Row="8"
                Grid.Column="1"
                HorizontalOptions="Center"/>

                   <ImageButton Source="edit.png"
                   Grid.Row= "9" 
                   Grid.Column="1"
                   Clicked="OnEditButtonClicked"
                   VerticalOptions= "Start"
                   WidthRequest="20"
                   HeightRequest="20" />
   </Grid>
</ContentPage>