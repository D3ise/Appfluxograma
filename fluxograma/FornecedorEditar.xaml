<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxograma.FornecedorEditar"
             Title="Editar perfil">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Text="Editar foto"
               Grid.Column="1"
               Grid.Row="0"
               HorizontalTextAlignment="Center" />

        <Image Source="user.png"
               Grid.Column="0"
               Grid.Row="1"
               HorizontalOptions="Center" />

        <Label Text="Nome do usuário:"
               Grid.ColumnSpan="2"
               Grid.Row="2" />

        <Entry x:Name="entryNome"
               Grid.ColumnSpan="2"
               Grid.Row="3" />
               
        <Label Text="Telefone:"
               Grid.ColumnSpan="2"
               Grid.Row="4" />

        <Entry x:Name="entryTelefone"
               Grid.Row="5"
               Grid.ColumnSpan="2"
               Keyboard="Telephone" />

        <Label Text="Endereço:"
               Grid.ColumnSpan="2"
               Grid.Row="6" />

        <Entry x:Name="entryEndereco"
               Grid.ColumnSpan="2"
               Grid.Row="7" />

        <Label Text="Email:"
               Grid.ColumnSpan="2"
               Grid.Row="8" />

        <Entry x:Name="entryEmail"
               Grid.ColumnSpan="2"
               Grid.Row="9"
               Keyboard="Email" />
               
        <Button Text="Salvar"
                Grid.Row="10"
                HorizontalOptions="Center"
                Clicked="Button_Clicked" />
    </Grid>
</ContentPage>